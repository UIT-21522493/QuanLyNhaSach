<div class="card">
    <div class="card-header">
        <h4>Edit Category</h4>
    </div>
    <div class="card-body">
        <form method="POST">
            <div class="form-group">
                <label for="txtCategoryID">#</label>
                <input type="text" class="form-control" id="txtCategoryID" name="id" readonly
                    value="{{this.category.id}}">
            </div>
            <div class="form-group">
                <label for="txtCategoryName">Category</label>
                <input type="text" class="form-control" id="txtCategoryName" name="name" autofocus
                    value="{{this.category.name}}">
            </div>
            <a class="btn btn-success" href="/admin/categories" role="button" title="Back to List">
                <i class="fa fa-backward" aria-hidden="true"></i>
            </a>
            <button type="submit" class="btn btn-danger" title="Remove Category" formaction="/admin/categories/del">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
            <button type="submit" class="btn btn-primary" formaction="/admin/categories/upd">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </form>
    </div>