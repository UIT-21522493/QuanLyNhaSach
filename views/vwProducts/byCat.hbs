<div class="card">
    <div class="card-header">
        <h4>Products</h4>
    </div>
    {{#if this.empty}}
    <div class="card-body">
        <p class="card-text">Không có dữ liệu.</p>
    </div>
    {{else}}
    <div class="card-body">
        <div class="row">
            {{#each this.product}}
            <div class="col-sm-4 mb-3">
                <div class="card h-100">
                    <img src="/public/img/sp/{{ProID}}/main.jpg" alt="{{ProName}}" title="{{ProName}}"
                        class="card-img-top">
                    <div class="card-body">
                        <h6 class="card-title">{{ProName}}</h6>
                        <p class="card-text">{{TinyDes}}</p>
                    </div>
                    <div class="card-footer ">
                        <a class="btn btn-sm btn-outline-primary" href="javascript;;" role="button">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            Details
                        </a>
                        <a class="btn btn-sm btn-success" href="javascript;;" role="button">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                            Add to cart
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item {{#unless can_go_prev}} disabled {{/unless}}">
                    <a class="page-link" href="?page={{prev_value}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                {{#each this.page_items}}
                {{#if isActive}}
                <li class="page-item active " aria-current="page">
                    <span class="page-link">
                        {{value}}
                        <span class="sr-only">(current)</span>
                    </span>
                </li>
                {{else}}
                <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
                {{/if}}
                {{/each}}
                <li class="page-item {{#unless can_go_next}} disabled {{/unless}}">
                    <a class="page-link" href="?page={{next_value}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    {{/if}}

</div>